[req]
default_bits = 4096
prompt = no
default_md = sha256
req_extensions = req_ext
distinguished_name = dn

[ dn ]
C=US
ST={{ mystate }}
L={{ mylocation }}
O={{ myorg }}
OU={{ myou }}
emailAddress={{ email_address }}
CN = {{ inventory_hostname }}

[ req_ext ]
subjectAltName = @alt_names

[ alt_names ]
DNS.1 = {{ inventory_hostname }}
{% if pki_san is defined %}
DNS.2 = {{ pki_san }}.{{ ansible_domain }}
{% endif %}
